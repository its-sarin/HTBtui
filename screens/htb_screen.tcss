Screen {
    layout: grid;
    grid-size: 8;
    grid-rows: 0.75fr 1fr;
}

Header {
    color: #37ff0f;
    background: #171717;
    text-style: bold;
}

RichLog {
    padding: 1 0 1 2;
    scrollbar-background: transparent;
    scrollbar-color: green;
    scrollbar-size-vertical: 1;
    scrollbar-size-horizontal: 0;
    background: #000;
}

Input:focus {
    border: tall #37ff0f;
}

Input:blur {
    border: tall #000;
}

#sidebar {
    column-span: 3;
    row-span: 6;
    background: #111;
}

#main {
    column-span: 5;
    row-span: 6;
    background: #000;
}

