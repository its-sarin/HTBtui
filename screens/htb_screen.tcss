PlayerStats {
    height: 43%;
    # color: #37ff0f;
    color: #0021B2;
    border: #0537ff;
}

CurrentMachines {
    height: 57%;
    color: #0021B2;
    border: #0537ff;
}

VerticalScroll {
    border: #0537ff;
    scrollbar-background: transparent;
    scrollbar-color: green;
    scrollbar-size-vertical: 1;
    scrollbar-size-horizontal: 0;
}

PlayerActivity {
    min-height: 100%;
    height: auto;
    color: #0021B2;
}

#footer_left {
    column-span: 4;
    row-span: 2;
    background: #111;
}

#footer_right {
    column-span: 4;
    row-span: 2;
    background: #111;
}

VPNConnection {
    border: #0537ff;
    color: #0021B2;
}

#active_machine {
    border: #0537ff;
    color: #0021B2;
}

#ping {
    dock: bottom;
    margin: 1 2;
    layer: 1;
    width: 6;
}

.box {
    height: 100%;    
    content-align: center middle;
}