$secondary: #9fef00;
$background: #111927;
$background-darken-1: #171717;
$border: #5b72a4;
$color: #a4b1cd;

Screen {
    layout: vertical;
}

Header {
    color: $secondary;
    background: $background-darken-1;
    text-style: bold;
}

Horizontal#player_container {
    height: 1fr;
    color: $color;
    background: $background;
}

Container#player_stats_container {
    width: 34%;
    height: 100%;
    background: $background;
    border: $border;
    overflow-y: auto;

}

Container#player_activity_container {
    width: 65%;
    height: 100%;
    background: $background;
}

PlayerStats {
    width: 100%;
    min-height: 100%;
    height: auto;
}

PlayerActivity {
    width: 100%;
    height: 100%;    
}

#buttons {
    height: 2;
    background: $background;
}

#buttons > Button {
    min-width:1;
    height: 1;
    max-height: 1;
    border: none;
    color: $color;
    margin: 0 1;
}

#buttons > Button:hover,
#buttons > Button:focus {
    color: auto;
    background: $secondary
}

Container#machines_container {
    height: 1.25fr;
    width: 100%;
    background: $background;
}

ContentSwitcher#machines_switcher {
    width: 100%;
    height: 100%;
}

Container#current_machines {
    width: 100%;
    height: 100%;
}

Container#retired_machines {
    width: 100%;
}

CurrentMachines, RetiredMachines {
    min-height: 100%;
    max-height: 100%;
}

CurrentMachines > .datatable--header,
RetiredMachines > .datatable--header,
PlayerActivity > .datatable--header {
    background: #1a2332;
}

CurrentMachines > .datatable--header-hover,
RetiredMachines > .datatable--header-hover, 
PlayerActivity > .datatable--header-hover {
    background: $secondary 60%;
 }

 PlayerActivity, #player_stats_container {
    background: $background;
    color: $color;
    border: $border;
    scrollbar-background: #111;
    scrollbar-background-active: transparent;
    scrollbar-background-hover: transparent;
    scrollbar-color: $secondary 50%;
    scrollbar-color-active: $secondary;
    scrollbar-color-hover: $secondary 70%;
    scrollbar-size: 0 1;
}

CurrentMachines, RetiredMachines {
    background: $background;
    color: $color;
    border: $border;
    scrollbar-background: #111;
    scrollbar-background-active: transparent;
    scrollbar-background-hover: transparent;
    scrollbar-color: $secondary 50%;
    scrollbar-color-active: $secondary;
    scrollbar-color-hover: $secondary 70%;
    scrollbar-size-vertical: 1;
}

Horizontal#bottom_container {
    height: 2;
    dock: bottom;
    background: #000;
}

VPNConnection, ActiveMachine {
    height: 100%;
    min-height: 100%;
    color: $color;
    content-align: center middle;
}

VPNConnection:hover, 
ActiveMachine:hover {
    background: $background-darken-1;
    color: auto;
}

VPNConnection {
    dock: left;
}

ActiveMachine {
    dock: right;
}

Footer {
    background: $background-darken-1;
    color: $color;
}

Footer > .footer--highlight {
    background: transparent;
    color: auto;
}

Footer > .footer--highlight-key {
    background: $secondary;
    text-style: bold;
    color: auto;
}

Footer > .footer--key {
    text-style: bold;
    background: transparent;
}

