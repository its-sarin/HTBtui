#     scrollbar-size: 0 0;
# }


#connection_container {
    column-span: 4;
    row-span: 1;
    background: $background;
}

#active_machine_container {
    column-span: 4;
    row-span: 1;
    background: $background;
}

VPNConnection, ActiveMachine {
    border: $border;
    color: $color;
}

# ActiveMachine {
#     border: #0537ff;
#     color: #0021B2;
# }

Footer {
    background: $background-darken-1;
    color: $color;
}

Footer > .footer--highlight {
    background: transparent;
    color: auto;
}

Footer > .footer--highlight-key {
    background: $secondary;
    text-style: bold;
    color: auto;
}

Footer > .footer--key {
    text-style: bold;
    background: transparent;
}

#ping {
    dock: bottom;
    margin: 1 2;
    layer: 1;
    width: 6;
}

.box {
    height: 100%;    
    content-align: center middle;
}



