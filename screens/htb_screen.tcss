$secondary: #9fef00;
$background: #111927;
$background-darken-1: #171717;
$border: #5b72a4;
$color: #a4b1cd;

Screen {
    layout: grid;
    grid-size: 8;
    grid-rows: 2.5fr 2.5fr 0.75fr 0.5fr 0.5fr 0.5fr 0.5fr 0.5fr;
}

Header {
    color: $secondary;
    background: $background-darken-1;
    text-style: bold;
}

#player_container {
    layout: horizontal;
    column-span: 8;
    row-span: 1;
    color: $color;
    background: $background;
}

# #main {
#     column-span: 6;
#     row-span: 4;
#     background: #000;
# }

PlayerStats {
    width: 35%;
    height: 100%;
    border: $border;
}

#machines_container {
    layout: horizontal;
    height: 100%;
    column-span: 8;
    background: #111;
}

CurrentMachines, PlayerActivity {
    min-height: 100%;
    height: auto;
    background: $background;
    color: $color;
}

CurrentMachines > .datatable--header, 
PlayerActivity > .datatable--header {
    background: #1a2332;
}

CurrentMachines > .datatable--header-hover, 
PlayerActivity > .datatable--header-hover {
    background: $secondary 60%;
 }

 PlayerActivity {
    max-width: 65%;
    min-width: 100%;
    border: $border;
    scrollbar-background: #111;
    scrollbar-background-active: transparent;
    scrollbar-background-hover: transparent;
    scrollbar-color: $secondary 50%;
    scrollbar-color-active: $secondary;
    scrollbar-color-hover: $secondary 70%;
    scrollbar-size: 0 1;
}

CurrentMachines {
    border: $border;
    scrollbar-background: #111;
    scrollbar-background-active: transparent;
    scrollbar-background-hover: transparent;
    scrollbar-color: $secondary 50%;
    scrollbar-color-active: $secondary;
    scrollbar-color-hover: $secondary 70%;
    scrollbar-size-vertical: 1;
    scrollbar-size-horizontal: 1;
}

